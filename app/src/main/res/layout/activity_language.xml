<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".UI.language">

        <TextView
            android:id="@+id/language_chooseLanguage_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/language_chooseLanguage"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/language_english_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="76dp"
            android:background="@drawable/btn"
            android:text="@string/language_english"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/language_arabic_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/btn"
            android:textColor="@color/white"
            android:text="@string/language_arabic"
            android:textSize="20sp" />
    </LinearLayout>
</layout>
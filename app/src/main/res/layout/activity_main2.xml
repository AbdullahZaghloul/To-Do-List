<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/image000000">

    <EditText
        android:id="@+id/task_name2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="@string/TaskName_text"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/task_des2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="257dp"
        android:ems="10"
        android:hint="@string/TaskDescriptionShowAll_text"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_add_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="289dp"
        android:text="@string/addTask_text" />

    <Button
        android:id="@+id/btn_show_all_Tasks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="290dp"
        android:text="@string/showAllTasks_text" />

</RelativeLayout>